<!DOCTYPE html>
<html>
<head>
  <title>Bookers2</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>

  <header>
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample1">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <p class="navbar-brand">Bookers</p>
        </div>
        <div class="collapse navbar-collapse" id="navbarEexample1">
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
            <li>
              <%= link_to user_path(current_user.id) do %>
              <span class="glyphicon glyphicon-home"> Home </span>
              <% end %>
            </li>
            <li>
              <%= link_to users_path do %>
              <span class="glyphicon glyphicon-user"> Users </span>
              <% end %>
            </li>
            <li>
              <%= link_to books_path do %>
              <span class="glyphicon glyphicon-book"> Books </span>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
              <span class="glyphicon glyphicon-log-out"> logout </span>
              <% end %>
            </li>
            <% else %>
            <li>
              <%= link_to root_path do %>
              <span class="glyphicon glyphicon-home"> Home </span>
              <% end %>
            </li>
            <li>
              <%= link_to '/home/about' do %>
              <span class="glyphicon glyphicon-link"> About </span>
              <% end %>
            </li>
            <li>
              <%= link_to new_user_registration_path do %>
              <span class="glyphicon glyphicon-edit"> sign up </span>
              <% end %>
            </li>
            <li>
              <%= link_to new_user_session_path do %>
              <span class="glyphicon glyphicon-log-in"> login </span>
              <% end %>
            </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <% if flash[:notice] %>
    <div class="alert alert-success">
      <%= flash[:notice] %>
    </div>
    <% end %>
    <% if flash[:alert] %>
    <div class="alert alert-danger">
      <%= flash[:alert] %>
    </div>
    <% end %>

    <% unless current_page?(root_path) %>
    <% unless request.path.include?("home") %>
    <% if user_signed_in? %>
    <div class="text-center">
      <br>
      <%= form_tag(search_path, method: :get) do %>
      <%= text_field_tag (:word) %>
      <%= select_tag 'range' ,options_for_select([['User', '1'], ['Book', '2']]) %>
      <%= select_tag 'search', options_for_select([["完全一致","perfect_match"], ["前方一致","forward_match"], ["後方一致","backward_match"], ["部分一致","partial_match"]]) %>
      <%= submit_tag "検索" %>
      <% end %>
    </div>
    <% end %>
    <% end %>
    <% end %>

  </header>

  <%= yield %>

  <footer>
    <div class="container">
      <div class="row">
        <div class="col-md-offset-9 col-md-3">
          <p>CopyRight Infratop.inc</p>
        </div>
      </div>
    </div>
  </footer>
</body>
</html>
