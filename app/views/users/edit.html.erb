<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h2>User info</h2>
      <%= form_for(@user) do |f| %>
      <% if @user.errors.any? %>
      <div class="text-danger">
        <h3><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
      <% end %>
      <div class="form-group has-icon">
        <label class="control-label sr-only" for="inputEmail">Name</label>
        <p>Name</p>
        <%= f.text_field :name, autofocus: true, id:"inputEmail", placeholder:""%>
        <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
      </div>
      <div class="form-group has-icon clearfix">
        <p>Image</p>
        <label class="control-label sr-only" for="inputEmail">ProfileImage</label>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
      </div>
      <div class="form-group has-icon">
        <label class="control-label sr-only" for="inputEmail">introduction</label>
        <p>Introduction</p>
        <%= f.text_area :introduction, autofocus: true, id:"inputEmail", placeholder:""%>
        <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
      </div>
      <%= f.submit "Update User", class:"btn btn-primary mt-20" %>
      <% end %>
    </div>
  </div>
</div>