<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <% if @book.errors.any? %>
      <div class="text-danger">
        <h2><%= @book.errors.count %> errors prohibited this obj from being saved:</h2>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-3">
      <%= render 'template/user_info', user: @user %>
      <%= render 'template/new_book', book: @book %>
    </div>
    <div class="col-xs-9">
      <h2>Books</h2>
      <%= render 'template/book_list', books: @books %>
    </div>
  </div>
</div>
